{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [  
        "plugin:react/recommended",
        "standard",
        "plugin:@next/next/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/prop-types":"off",
      "react/react-in-jsx-scope":"off"
    }
}
